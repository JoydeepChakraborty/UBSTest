package com.ubs.opsit.interviews;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;
import java.util.Locale;

import com.ubs.opsit.time.Hours;
import com.ubs.opsit.time.Minutes;

public class BerlinClock implements TimeConverter {

	private Hours hours;
	private Minutes minutes;
	
	@Override
	public void convertTime(String inputTime) {
		TimeConverter timeConverter = new BerlinClock();
  
		if(validateTime()){
			
			hours=new Hours();
			hours.calculatedString(Integer.parseInt(aTime.split(":")[0]));
			
			minutes=new Minutes();
			minutes.calculatedString(Integer.parseInt(aTime.split(":")[1]));
		}

	}


	public Date getTime(String time) {

		SimpleDateFormat formatter = new SimpleDateFormat("dd/MM/yyyy hh:mm:ss",Locale.UK);

		Date date = null;
		try {
			date = formatter.parse(time);
			
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return date;
	}
}
